{
    "env": {
        "es6": true,
        "mocha": true,
        "browser": true
    },
    "globals": {
        "chrome": true,
        "$": true,
        "assert": true
    },
    "ecmaFeatures": {
        "arrowFunctions": true
    },
    "rules": {
        "no-unused-vars": 2,
        "no-useless-escape": 0,
        "indent": [2,4],
        "func-names": 0,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*test.js"]}]
    },
    "extends": [
        "eslint:recommended",
        "airbnb"
    ]
}
